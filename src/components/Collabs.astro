---
let { root_avatar,  color, job, name } = Astro.props
---

<div class="flex gap-3  ">
    <div  class="rounded-full h-12 w-20   flex items-center justify-center bg-cover">
        <img class="w-20" src={`/${root_avatar}`} alt="Avatar de colaboradores">
    </div>
    <div class="flex flex-col whitespace-nowrap justify-around">
        <div style={{ backgroundColor: color }} class="px-3 py-1 rounded-md flex flex-col items-center">
            <div class="text-xs text-gray-200 font-semibold">{job}</div>
        </div>
        <p class="text-white text-sm font-semibold">{name}</p>
    </div>
</div>
