---
import Proyect from "../components/Proyect.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="MediBiologica">
    <Proyect
    bg="#1E1E1E"
    bgShadow="#333333"
    idx="medibiologica"
    idxSite="medi-biologic.vercel.app"
    endDate="Agosto/2023"
    description="Desarrollé un sitio web multilingüe para MediBiologica utilizando Astro como framework principal. El proyecto se centra en ofrecer una experiencia de usuario fluida y eficiente, con soporte para múltiples idiomas y optimización para rendimiento."
    generalFacts={[
        'Implementación de internacionalización (i18n) para soporte multilingüe',
        'Uso de Astro para optimización de rendimiento',
        'Estructura de proyecto organizada con componentes reutilizables',
        'Integración de estilos con Tailwind CSS',
        'Despliegue en Vercel para alta disponibilidad'
    ]}
    challanges={[
        'Configuración de rutas dinámicas para diferentes idiomas',
        'Optimización de imágenes y assets para mejorar el tiempo de carga',
        'Implementación de componentes interactivos manteniendo el rendimiento',
        'Gestión eficiente de estados y traducciones en toda la aplicación',
        'Asegurar una experiencia consistente en diferentes dispositivos y navegadores'
    ]}
    ahrefMock="mock_medibiologic.webp"
    tech={[
        'Astro',
        'React',
        'TypeScript',
        'Tailwind CSS',
        'i18next',
        'Vercel',
        'ESLint',
        'Git'
    ]}
    ahrefSource="https://github.com/tuusuario/medibiologica"
    ahrefSite="https://medi-biologic.vercel.app"
    />
</Layout>